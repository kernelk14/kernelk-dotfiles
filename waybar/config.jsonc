{
  "layer": "bottom",
  "position": "top",
  "height": 32,
  "spacing": 2,
  "exclusive": true,
  "gtk-layer-shell": true,
  "passthrough": false,
  "fixed-center": true,
  "modules-left": ["hyprland/workspaces"],
  "modules-center": ["hyprland/window"],
  "modules-right": [
    "mpris",
    "cpu",
    "memory",
    "pulseaudio",
    "clock",
    "clock#simpleclock",
    "tray",
    "custom/notification",
    "custom/power",
  ],
  "custom/spotify": {
    "format": "ÔÜº  {}",
    "return-type": "json",
    "on-click": "playerctl -p spotify play-pause",
    "on-click-right": "spotifatius toggle-liked",
    "on-click-middle": "playerctl -p spotify next",
    "exec": "spotifatius monitor",
  },
  "mpris": {
    "format": "{player_icon}",
    "format-paused": "{status_icon}",
    "player-icons": {
        "default": "\uf28b",
        "mpv": "üéµ"
    },
    "status-icons": {
        "paused": "\uf144",
    },
    "on-click": "hyprmixer",
    "max-length": 1000,
    "interval": 1,
    // "player": "spotify",
    // "dynamic-order": ["artist", "title"],
    // "format": "{player_icon} {dynamic}",
    // "format-paused": "{status_icon} <i>{dynamic}</i>",
    // "status-icons": {
    //   "paused": "ÔÅå",
    // },
    // "player-icons": {
    //   "default": "ÔÅã",
    // },
  },
  "hyprland/workspaces": {
    "on-click": "activate",
    "format": "{id}",
    "all-outputs": true,
    "disable-scroll": false,
    "active-only": false,
  },
  "hyprland/window": {
    "format": "{title}",
  },
  "tray": {
    "show-passive-items": true,
    "spacing": 10,
  },
  "clock#simpleclock": {
    "tooltip": false,
    "format": "ÔÄó {:%I:%M %p}",
  },
  "clock": {
    "format": "ÔÅ≥ {:L%a %d %b}",
    "calendar": {
      "format": {
        "days": "<span weight='normal'>{}</span>",
        "months": "<span color='#cdd6f4'><b>{}</b></span>",
        "today": "<span color='#f38ba8' weight='700'><u>{}</u></span>",
        "weekdays": "<span color='#f9e2af'><b>{}</b></span>",
        "weeks": "<span color='#a6e3a1'><b>W{}</b></span>",
      },
      "mode": "month",
      "mode-mon-col": 1,
      "on-scroll": 1,
    },
    "tooltip-format": "<span color='#cdd6f4' font='Lexend 16'><tt><small>{calendar}</small></tt></span>",
  },
  "cpu": {
    "format": "Ôãõ {usage}%",
    "tooltip": true,
    "interval": 1,
  },
  "memory": {
    "format": "ÓøÖ {used:0.1f}Gi",
  },
  "pulseaudio": {
    "format": "{icon} {volume}%",
    "format-muted": "Ôë¶  muted",
    "format-icons": {
      "headphone": "ÔÄ•",
      "default": ["ÔÄ¶ ", "ÔÄß ", "ÔÄ® "],
    },
    "on-click": "pavucontrol",
  },
  "custom/sep": {
    "format": "|",
    "tooltip": false,
  },
  "custom/power": {
    "tooltip": false,
    "on-click": "wleave -p layer-shell &",
    "format": "‚èª",
  },
  "custom/notification": {
    "escape": true,
    "exec": "swaync-client -swb",
    "exec-if": "which swaync-client",
    "format": "{icon}",
    "format-icons": {
      "none": "Û∞Ö∫",
      "notification": "Û∞°ü",
    },
    "on-click": "sleep 0.1 && swaync-client -t -sw",
    "return-type": "json",
    "tooltip": false,
  },
}
